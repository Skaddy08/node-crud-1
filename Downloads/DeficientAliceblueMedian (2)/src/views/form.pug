doctype html
html
  head
    title Form
    link(rel="stylesheet", href="/css/formStyles.css")
    script(src="/js/form.js" defer)
  body
    h1 User Data
    form(action="/submit" method="post" enctype="multipart/form-data" id="mainForm")
      div
        label(for="fullName") Full Name:
        input(type="text" id="fullName" name="fullName" placeholder="Please enter your full name")
        span.error(id="fullNameError")
      div
        label(for="email") Email:
        input(type="email" id="email" name="email" placeholder="Please enter your email")
        span.error(id="emailError")
      div
        label(for="dob") Date of Birth:
        input(type="date" id="dob" name="dob" placeholder="Please enter your date of birth")
        span.error(id="dobError")
      div
        label(for="gender") Gender:
        select(id="gender" name="gender")
          option(value="" disabled selected) Select Gender
          option(value="male") Male
          option(value="female") Female
          option(value="other") Other
        span.error(id="genderError")
      div
        label(for="country") Country:
        select(id="country" name="country")
          option(value="" disabled selected) Select Country
          option(value="country1") Country 1
          option(value="country2") Country 2
          option(value="country3") Country 3
          option(value="country4") Country 4
          option(value="country5") Country 5
        span.error(id="countryError")
      div
        label(for="passportImage") Passport Image:
        input(type="file" id="passportImage" name="passportImage" accept="image/png, image/jpeg")
        span.error(id="passportImageError")
      div
        button(type="submit" id="submitButton" disabled) Submit
